<odoo>
  <data>

    <record id="tipo_vista_arbol_cod_dep" model="ir.ui.view">
            <field name="name">vista.tipo.arbol.cod.dep</field>
            <field name="model">res.departamento.dian</field>
            <field name="arch" type="xml">
                <tree string="Tree Name">
                    <field name="departamento" />
                    <field name="departamento_code" />    
                    <field name="pais"/>                
                </tree>
            </field>
      </record>

        <record id="tipo_vista_formulario_cod_dep" model="ir.ui.view">
            <field name="name">vista.tipo.formulario.cod.dep</field>
            <field name="model">res.departamento.dian</field>           
            <field name="arch" type="xml">
              <form string="Form View Name">
                <sheet>
                  <group>
                    <field name="departamento" />                    
                    <field name="departamento_code"/>
                    <field name="pais"/>                                                                                                       
                  </group>    
                </sheet>                      
              </form>
            </field>
      </record>

     <record id="accion_cod_dep" model="ir.actions.act_window">
            <field name="name">Codigo de Departamento Dian</field>
            <field name="res_model">res.departamento.dian</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
             <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crea un nuevo registro</p>
            </field>

      </record>        
  </data>
</odoo>